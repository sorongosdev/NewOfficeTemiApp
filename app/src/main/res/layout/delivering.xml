<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccfbff"
    tools:context=".Delivering">

    <TextView
        android:id="@+id/go_div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="282dp"
        android:text="go division"
        android:textSize="50px"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Sender_image" />


    <ImageView
        android:id="@+id/Receiver_image"
        android:layout_width="0dp"
        android:layout_height="731dp"
        android:layout_marginEnd="160dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sora" />


    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="0dp"
        android:layout_height="333dp"
        android:layout_marginStart="190dp"
        android:layout_marginEnd="253dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Receiver_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jongchan" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="449dp"
        android:layout_height="350dp"
        android:layout_marginStart="69dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sora" />


    <ImageView
        android:id="@+id/Sender_image"
        android:layout_width="339dp"
        android:layout_height="683dp"
        android:layout_marginStart="168dp"
        android:layout_marginEnd="265dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/go_div"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jiyun" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="1127dp"
        android:layout_height="694dp"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="88dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/delivering_gifimage" />


</androidx.constraintlayout.widget.ConstraintLayout>